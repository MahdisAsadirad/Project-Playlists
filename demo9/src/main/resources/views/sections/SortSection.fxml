<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo9.Controller.SortController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="⚙️ Sort Playlist" />

    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Sort songs in a playlist:" />

        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Select Playlist:" />
                <ComboBox fx:id="playlistCombo" prefWidth="200" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Sort By:" />
                <ComboBox fx:id="sortCriteriaCombo" prefWidth="150" />
            </VBox>
        </HBox>

        <VBox spacing="10">
            <Label style="-fx-font-weight: bold;" text="Sort Order:" />
            <HBox spacing="20">
                <RadioButton fx:id="ascendingRadio" selected="true" text="Ascending">
                    <toggleGroup>
                        <ToggleGroup fx:id="sortOrderGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="descendingRadio" text="Descending" toggleGroup="$sortOrderGroup" />
            </HBox>
        </VBox>

        <Button fx:id="sortButton" prefWidth="120" text="Sort Playlist" />
    </VBox>

    <VBox fx:id="resultContainer" spacing="10">

    </VBox>

</VBox>
