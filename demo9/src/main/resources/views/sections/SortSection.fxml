<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo9.Controller.SortController"
      spacing="20"
      styleClass="vbox"
      stylesheets="@page-styles.css">

    <Label text="âš™ Sort Playlist" styleClass="title"/>

    <VBox spacing="20" styleClass="card">
        <Label text="Sort songs in a playlist:" styleClass="subtitle"/>

        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Select Playlist:" styleClass="label"/>
                <ComboBox fx:id="playlistCombo" prefWidth="220" styleClass="combo-box"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Sort By:" styleClass="label"/>
                <ComboBox fx:id="sortCriteriaCombo" prefWidth="180" styleClass="combo-box"/>
            </VBox>
        </HBox>

        <Button fx:id="sortButton" text="Sort Playlist" prefWidth="160" styleClass="button-success"/>
    </VBox>

    <VBox fx:id="resultContainer" spacing="15"/>

</VBox>
