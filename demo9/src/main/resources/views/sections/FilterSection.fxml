<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 30;" styleClass="root" stylesheets="@page-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo9.Controller.FilterController">

    <Label styleClass="title" text="Filter Playlist" />

    <VBox spacing="15" styleClass="card">
        <Label styleClass="subtitle" text="Filter songs from a playlist:" />

        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox spacing="5">
                <Label styleClass="subtitle" text="Select Playlist:" />
                <ComboBox fx:id="playlistCombo" prefWidth="200" styleClass="combo-box" />
            </VBox>

            <VBox spacing="5">
                <Label styleClass="subtitle" text="Filter Criteria:" />
                <ComboBox fx:id="criteriaCombo" prefWidth="150" styleClass="combo-box" />
            </VBox>
        </HBox>

        <VBox spacing="5">
            <Label styleClass="subtitle" text="Filter Value:" />
            <TextField fx:id="filterValueField" prefWidth="300" promptText="Enter value to filter by" styleClass="text-field" />
            <Label styleClass="hint" text="Example: For 'Genre' enter 'Rock', for 'Release Year' enter '2020'" />
        </VBox>

        <VBox spacing="5">
            <Label styleClass="subtitle" text="New Playlist Name:" />
            <TextField fx:id="newPlaylistNameField" prefWidth="300" promptText="Enter name for filtered playlist" styleClass="text-field" />
        </VBox>

        <Button fx:id="filterButton" styleClass="button success" text="Create Filtered Playlist" />
    </VBox>

    <VBox fx:id="resultContainer" spacing="10" styleClass="card" />
</VBox>
