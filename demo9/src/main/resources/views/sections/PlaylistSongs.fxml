<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo9.Controller.PlaylistSongsController"
      spacing="20"
      stylesheets="@page-styles.css"
      styleClass="root"
      style="-fx-padding: 30;">

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="â† Back" onAction="#handleBack" styleClass="button"/>
        <Label fx:id="playlistTitleLabel" styleClass="title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addSongButton" text="+ Add Song" onAction="#handleAddSong" styleClass="button-success"/>
    </HBox>

    <Separator styleClass="separator"/>

    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox fx:id="songsContainer" spacing="10"/>
    </ScrollPane>

</VBox>
