<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo9.Controller.DiscoverSongsController"
      spacing="20" styleClass="root" style="-fx-padding: 30;">

    <Label text="ðŸ” Discover Songs" styleClass="title"/>

    <VBox spacing="15">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Search:" styleClass="subtitle"/>
                <TextField fx:id="searchField" promptText="Search songs..." prefWidth="200" styleClass="text-field"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Genre:" styleClass="subtitle"/>
                <ComboBox fx:id="genreFilter" prefWidth="150" styleClass="combo-box"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Artist:" styleClass="subtitle"/>
                <ComboBox fx:id="artistFilter" prefWidth="150" styleClass="combo-box"/>
            </VBox>
        </HBox>

        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox fx:id="discoverSongsContainer" spacing="10"/>
        </ScrollPane>
    </VBox>
</VBox>
