<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo9.Controller.MergeController"
      spacing="20"
      stylesheets="@page-styles.css"
      styleClass="root"
      style="-fx-padding: 30;">

    <!-- عنوان صفحه -->
    <Label text="Merge Playlists" styleClass="title"/>

    <!-- کارت اصلی -->
    <VBox spacing="15" styleClass="card">

        <Label text="Select two playlists to merge:" styleClass="subtitle"/>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox spacing="5">
                <Label text="First Playlist:" styleClass="subtitle"/>
                <ComboBox fx:id="firstPlaylistCombo" prefWidth="200" styleClass="combo-box"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Second Playlist:" styleClass="subtitle"/>
                <ComboBox fx:id="secondPlaylistCombo" prefWidth="200" styleClass="combo-box"/>
            </VBox>
        </HBox>

        <VBox spacing="5">
            <Label text="New Playlist Name:" styleClass="subtitle"/>
            <TextField fx:id="newPlaylistNameField" prefWidth="300" promptText="Enter name for merged playlist" styleClass="text-field"/>
        </VBox>

        <Button fx:id="mergeButton" text="Merge Playlists" styleClass="button success" prefWidth="150"/>
    </VBox>

    <VBox fx:id="resultContainer" spacing="10"/>
</VBox>
