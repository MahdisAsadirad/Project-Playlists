<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo9.Controller.MergeController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="Merge Playlists" />

    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Select two playlists to merge:" />

        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="First Playlist:" />
                <ComboBox fx:id="firstPlaylistCombo" prefWidth="200" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Second Playlist:" />
                <ComboBox fx:id="secondPlaylistCombo" prefWidth="200" />
            </VBox>
        </HBox>

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="New Playlist Name:" />
            <TextField fx:id="newPlaylistNameField" prefWidth="300" promptText="Enter name for merged playlist" />
        </VBox>
        <Button fx:id="mergeButton" prefWidth="150" text="Merge Playlists" />
    </VBox>
    <VBox fx:id="resultContainer" spacing="10">
    </VBox>

</VBox>
